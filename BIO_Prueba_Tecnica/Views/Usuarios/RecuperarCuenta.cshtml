@model BIO_Prueba_Tecnica.Models.CuentaEmail;


<div class="col-xxl-5">
    <div class="card text-white text-center bg-primary mb-3">
        <div class="card-header"><h3>Recuperar tu  cuenta</h3> </div>
        <div class="card-body">
            <h5 class="card-title">Ingresa tu correo electrónico para recuperar tu cuenta.</h5>
            <form asp-action="RecuperarCuenta" method="post">
                <p class="card-text">
                    <div class="me-3">
                        <div style="text-align: center">
                            <span class="text-danger"> @ViewBag.InvalidoMail</span>
                        </div>
                        <input type="text" class="form-control" id="Edad" asp-for="Emial" placeholder="Correo">
                        <span asp-validation-for="Emial" class="text-danger"></span>
                    </div>
                </p>
                <button type="submit" class="btn btn-success">Enviar</button>
            </form>
        </div>
    </div>
</div>