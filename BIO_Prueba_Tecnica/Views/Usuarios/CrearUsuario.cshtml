@model  BIO_Prueba_Tecnica.Models.Usuarios;
@{
    ViewData["Título"] = "Crear";
}
<!doctype html>
<html>
<head>
    <title>Crear Usuario</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
</head>
<body>

    <div class="container-sm">

        <h3>Crear Usuario</h3>
        <form asp-action="CrearUsuario" method="post">
            <div class="me-3">
                <label for="Usuario" class="form-label">Ingrese su nombre:</label>
                <input type="text" class="form-control" id="Usuario" asp-for="usuario_Nombre">
                <span asp-validation-for="usuario_Nombre" class="text-danger"></span>
            </div>
            <div class="me-3">
                <label for="Clave" class="form-label">Ingrese su clave:</label>
                <input type="password" class="form-control" id="Clave" asp-for="usuario_Clave">
                <span asp-validation-for="usuario_Clave" class="text-danger"></span>
            </div>
            <div class="me-3">
                <label for="Edad" class="form-label">Ingrese su edad:</label>
                <input type="text" class="form-control" id="Edad" asp-for="usuario_Edad">
                <span asp-validation-for="usuario_Edad" class="text-danger"></span>
            </div>
            <div class="me-3">
                <label for="FechaNac" class="form-label">Ingrese su fecha de nacimiento:</label>
                <input type="date" class="form-control" id="FechaNac" asp-for="usuario_FechaNac">
                <span asp-validation-for="usuario_FechaNac" class="text-danger"></span>
            </div>
            <div class="me-3">
                <label for="FechaCrea" class="form-label">Ingrese su fecha de creación :</label>
                <input type="text" class="form-control" id="FechaCrea" asp-for="usuario_FechaCrea" readonly value="@DateTime.Now.ToString("d")">
            </div>
            <div class="me-3">
                <label for="FechaMod" class="form-label">Ingrese su fecha de modificación:</label>
                <input type="text" class="form-control" id="FechaMod" asp-for="usuario_FechaMod" readonly value="@DateTime.Now.ToString("d")">
            </div>
            <div class="me-3">
                <label for="Correo" class="form-label">Ingrese su correo:</label>
                <input type="text" class="form-control" id="Correo" asp-for="usuario_Email">
                <span asp-validation-for="usuario_Email" class="text-danger"></span>
            </div>
            <div class="me-3">
                <label for="Genenro">Seleccione un genero</label>
                <select class="form-select mb-3" id="Genero" asp-for="usuario_Genero">
                    <option> </option>
                    <option>F</option>
                    <option>M</option>
                </select>
                <span asp-validation-for="usuario_Genero" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </form>

        @if (ViewBag.Creado == 1)
        {
           <script>alert("El usuario fue creado satisfactoriamente!");</script>
        }

    </div>

</body>
</html>